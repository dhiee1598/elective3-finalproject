{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "src",
    "baseUrl": "src",
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "types": ["./src/interfaces"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
